generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PMC {
  id     String  @id @default(uuid()) @db.Uuid
  name   String  @unique
  params Param[]
}

model Param {
  id    String    @id @default(uuid()) @db.Uuid
  name  String
  value String
  type  ParamType
  pmcId String    @db.Uuid
  pmc   PMC       @relation(fields: [pmcId], references: [id], onDelete: Cascade)
}

enum ParamType {
  coords
  number
  date
  string
}
